# Example Terraform Variables File
# Copy this to terraform.tfvars and customize for your deployment

# AWS Configuration
aws_region  = "us-east-1"
environment = "prod"

# Project Configuration
project_name = "celec-flow-prediction"

# Network Configuration
vpc_cidr             = "10.0.0.0/16"
public_subnet_count  = 2
private_subnet_count = 2

# Database Configuration
db_instance_class = "db.t3.micro"
db_username      = "mlflow"
# db_password is sensitive - set via environment variable or prompt
# export TF_VAR_db_password="your-secure-password-here"

# Application Configuration
app_port     = 5000
jupyter_port = 8888

# Compute Configuration
ecs_cpu        = 512
ecs_memory     = 1024
desired_count  = 1
min_capacity   = 1
max_capacity   = 3

# Monitoring Configuration
log_retention_days      = 14
backup_retention_period = 7

# Auto Scaling Configuration
enable_auto_scaling    = true
scale_up_threshold     = 70
scale_down_threshold   = 30

# Feature Flags
enable_monitoring    = true
enable_data_pipeline = true
enable_backup       = true
enable_ssl          = false

# Security Configuration
allowed_cidr_blocks = ["0.0.0.0/0"]  # Restrict this for production

# Data Pipeline Configuration
data_pipeline_schedule = "0 2 * * ? *"  # Daily at 2 AM UTC

# Additional Tags
additional_tags = {
  Owner              = "DataScience-Team"
  CostCenter         = "Research"
  DataClassification = "Internal"
  BackupRequired     = "Yes"
  Environment        = "Production"
}